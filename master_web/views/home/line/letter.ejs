                                            <input id="upload_letter_image" name="letter_image" style="display: none" accept="image/png,image/gif,image/jpeg,image/jpg" type="file">
                                            <font><%=translate('bline_message_photos')%></font>
                                        </label>
                                            <input type="hidden" name="user_id" value="">
                                        </form>
                                        <button class="btn submit" onclick="send_message(this)"><%=translate('bline_message_publish')%></button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
            </div>
        </div>
    </div>
</div>
</div>
<%- include('../../global/foot_script.ejs') %>
<script src="<%= PLUGINS_STATIC %>qqface/jquery-qqface.js?v=<%=VERSION%>"></script>
<script src="<%= STATIC %>javascripts/home/line.js?v=<%=VERSION%>"></script>
<script src="<%= STATIC %>javascripts/home/line_letter.js?v=<%=VERSION%>"></script>
</body>

</html>