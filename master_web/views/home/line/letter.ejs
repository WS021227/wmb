<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%=translate('bline_message_title')%>-邦Line</title>
    <%- include('./head.ejs') %>
    <link rel="stylesheet" href="<%= STATIC %>css/home_center/line/letter.css?v=<%= VERSION %>">
</head>

<body>
<%- include('../../global/head.ejs') %>
<div class="wrapper">
    <div class="line-admin">
        <%- include('../../home/admin_tab.ejs') %>
        <!-- 主体内容 -->
        <div class="line-admin-content">
            <!-- 左侧菜单 -->
            <%- include('./menu.ejs') %>
            <!-- 右侧内容 -->
            <input type="hidden" id="line_avatar" value="<%=LINE_IMAGE_PATH%><%=results.line_user.avatar%>">
            <input type="hidden" id="line_uname" value="<%=results.line_user.name%>">
            <div class="line-admin-wrapper">
                <div class="container">
                    <div class="letter-module">
                        <div class="letter-topic">
                            <span class="title"><%=translate('bline_message_to_ta')%></span>
                            <a class="link line-index" href="javascript:void(0);" target="_blank"></a>
                        </div>
                        <div class="letter-window">
                            <div class="letter-people">
                                <div class="topic">
                                    <div class="title"><%=translate('bline_message_list')%>（<font id="letter_count"></font>）</div>
                                    <div class="search-people">
                                        <input type="text" class="input-text clear-target" id="letter_search" placeholder="<%=translate('bline_message_search')%>">
                                        <btton class="clear-search clear-txt" data-efun="letter_clear">&#10005;</btton>
                                    </div>
                                </div>
                                <div class="people-list letter-scroll" id="letter_users">
                                </div>
                            </div>
                            <div class="letter-content">
                                <div class="people-info"> </div>
                                <div class="letter-list">
                                    <div class="scroll-wrapper letter-scroll" id="letter_records">
                                    </div>
                                </div>
                                <div class="public-letter">
                                    <input type="hidden" id="letter_uid" value="">
                                    <textarea rows="5" class="input-textarea" id="letter_message" placeholder="<%=translate('bline_message_chat')%>"></textarea>
