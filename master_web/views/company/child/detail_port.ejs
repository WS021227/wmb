<div class="higher-search">
    <div class="header-title"><h2><%=translate('detail_tab_share_advanced')%></h2></div>
    <div class="power-search-box">
        <form id="trade_port_search_form" onsubmit="return false">
        <input placeholder="<%=translate('detail_tab_port_tips')%>" class="search-input clear-target datatables-search-text" id="tab_trade_port_search" />
        <i class="delete-input clear-txt">×</i>
        <input type="hidden" name="state" value="0">
        <input type="hidden" name="start_time" value="**">
        <input type="hidden" name="port_type" value="">
        </form>
    </div>
</div>
<div class="result-list">
    <div class="header-title">
        <h2><%=translate('detail_module_port')%></h2>
        <div id="port_deep">
            <div class="dropdown-btn" data-value="*">
                <font class="show"><%=translate('detail_tab_share_trade_depth')%></font>
                <i></i>
            </div>
            <ul class="dropdown-menu" style="margin-top: 10px;">
                <li class="item active" data-value="*"><%=translate('detail_tab_share_no_conditions')%></li>
                <li class="item" data-value="1"><%=translate('detail_tab_share_no_last_year')%></li>
                <li class="item" data-value="2"><%=translate('detail_tab_share_already')%></li>
                <li class="item" data-value="3"><%=translate('detail_tab_share_new_add')%></li>
            </ul>
        </div>
        <div id="port_type">
            <div class="dropdown-btn" data-value="*">
                <font class="show"><%=translate('detail_module_bill_trade_port')%></font>
                <i></i>
            </div>
            <ul class="dropdown-menu" style="margin-top: 10px;">
                <li class="item active" data-value="0"><%=translate('detail_module_bill_import_port')%></li>
                <li class="item" data-value="1"><%=translate('detail_module_bill_export_port')%></li>
            </ul>
        </div>
    </div>
    <div class="trading-list-box">
      <div class="trading-list-data">
         <div class="trading-list-number"><%=translate('detail_tab_share_total')%><font class="hits"></font>，<%=translate('detail_tab_share_page')%></div><div id="trade_port_page_len"></div>
         <!--div class="port-page-length"></div-->
         <!--<span class="export tab-export" data-src="content_trade_port" data-fl="港口名录"><i></i><%=translate('share_text_export')%></span>-->
         <span class="export trade-port-export"><i></i><%=translate('share_text_export')%></span>
       </div>
    </div>
    <div>
        <table border="0" id="content_trade_port" class="datatable-content"></table>
    </div>
</div>
<script type="application/javascript">
    $('#port_deep').wdropdown({
        selected: function (e) {
            var _val = e.value
            if(_val == '1'){
                $('#trade_port_search_form [name="start_time"]').val($.formatDate($.date_add(-1, company_end_time)))
                $('#trade_port_search_form [name="state"]').val(0)
            }else if (_val == '*'){
                $('#trade_port_search_form [name="start_time"]').val('**')
                $('#trade_port_search_form [name="state"]').val(0)
            }else{
                $('#trade_port_search_form [name="start_time"]').val('**')
                $('#trade_port_search_form [name="state"]').val({'2': 2, '3': 1}[_val])
            }
            $('#tab_trade_port_search').val('')
            trade_port()
        }
    })
    $('#port_type').wdropdown({
        selected: function (e) {
            $('#trade_port_search_form [name="port_type"]').val(e.value)
            $('#tab_trade_port_search').val('')
            trade_port()
        }
    })


</script>
